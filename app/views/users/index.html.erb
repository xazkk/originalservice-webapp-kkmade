      <li class="media">
        <img class="mr-2 rounded" src="<%= user.image %>" alt="">
        <div class="media-body">
          <div>
            <p><%= link_to user.name, user_path(user) %></p>
          </div>
        </div>
        <div class="media-body">
          <p class=""><%= link_to 'お気に入り商品数', user_path(user) %></p>
        </div>
         <div class="media-body">
          <p class="ml-4"><%= link_to 'レビューした商品数', user_path(user) %></p>
        </div>
      </li>
    <% end %>
  </ul>
  <%= paginate @users %>
