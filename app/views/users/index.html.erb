  <ul class="list-unstyled">
    <% @users.each do |user| %>
      <li class="media mb-2">
        <% if user.image? %>
        <img class="mr-4 rounded" style="height: 50px;" src="<%= user.image %>" alt="">
        <% else %>
        <img class="mr-4 rounded" src="<%= gravatar_url(user, { size: 50 }) %>" alt="">
        <% end %>
        <div class="media-body">
          <div>
            <p class="mt-2"><%= link_to user.name, user_path(user) %></p>
          </div>
        </div>
        <div class="media-body">
          <p class="mt-2"><%= link_to 'お気に入り商品数', user_path(user) %></p>
        </div>
         <div class="media-body">
          <p class="ml-2 mt-3"><%= link_to 'レビューした商品数', user_path(user) %></p>
        </div>
      </li>
    <% end %>
  </ul>
  <%= paginate @users %>
