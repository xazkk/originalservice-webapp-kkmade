  <ul class="list-unstyled">
    <% @users.each do |user| %>
      <li class="media">
        <img class="mr-2 rounded" src="<%= user.image %>" alt="">
        <div class="media-body">
          <div>
            <%= user.name %>
          </div>
          <div>
            <p><%= link_to 'プロフィールを見る', user_path(user) %></p>
          </div>
        </div>
        <div>
          <p class="pr-4"><%= link_to 'お気に入り商品数', user_path(user) %></p>
        </div>
         <div>
          <p class="pl-4"><%= link_to 'レビューした商品数', user_path(user) %></p>
        </div>
      </li>
    <% end %>
  </ul>
  <%= paginate @users %>
