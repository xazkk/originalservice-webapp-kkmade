<h5 class="mb-4"><%= @item.name %></h5>
<div class="media">
  <img class="align-self-start mr-3 img-fluid" src="<%= @item.image %>" alt="">
  <div class="media-body">
    <div class="mb-2">平均評価：４．１ </div>
    <div class="font-weight-bolder"><%= @item.price %>円</div>
  </div>
</div>
<div class="card mt-4 mb-4">
  <div class="card-body">
    <%= @item.content %>
  </div>
</div>

<div class="mt-4">
 <%= form_with(url: '/items/' + @item.id.to_s + '/reviews', local: true) do |f| %>
   <%= hidden_field_tag :user_id, current_user.id %>
    <div class="form-group">
      <%= f.label :rating, '評価：' %>
      <%= f.select :rating, [5,4,3,2,1], class: 'form-control' %>
    </div>
    
    <div class="form-group mb-4">
      <%= f.label :content, 'レビュー' %>
      <%= f.text_area :content, class: 'form-control' %>
    </div>

    <div class="text-left mt-4">
    <%= f.submit '編集', class: 'btn btn-primary pl-4 pr-4' %>
    </div>
 <% end %>
</div>